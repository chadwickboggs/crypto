#!/bin/bash

#JAVA_OPTS="${JAVA_OPTS} --source 19"
#JAVA_OPTS="${JAVA_OPTS} --enable-preview"

if [ "-g" == "${1}" ]; then
    JAVA_OPTS="${JAVA_OPTS} -Xdebug -agentlib:jdwp=transport=dt_socket,server=y,suspend=y,address=5005"
    shift 1
fi

nooputil_home="$(dirname ${0})"/..
nooputil_conf="${nooputil_home}"/conf
nooputil_dist="${nooputil_home}"/dist
nooputil_lib="${nooputil_home}"/lib
#nooputil_dev_build_folder="${nooputil_home}"/out/production/crypto
nooputil_dev_build_folder="${crypto_home}"/target/classes

nooputil_dist_escaped="$(/bin/echo "${nooputil_dist}" | /usr/bin/sed 's/\//\\\//g')"
nooputil_lib_escaped="$(/bin/echo "${nooputil_lib}" | /usr/bin/sed 's/\//\\\//g')"

#
# Add distribution to classpath.
#

dists="${nooputil_dist}/$(/bin/ls "${nooputil_dist}" | /usr/bin/tr '\n' ':')"
dists="$(/bin/echo ${dists} | /usr/bin/sed "s/:/:${nooputil_dist_escaped}\//g")"

#
# Add all library dependencies to classpath.
#

libs="${nooputil_lib}/$(/bin/ls "${nooputil_lib}" | /usr/bin/tr '\n' ':')"
cp="${dists}:$(/bin/echo ${libs} | /usr/bin/sed "s/:/:${nooputil_lib_escaped}\//g")"
cp="${nooputil_dev_build_folder}:${cp}"

#
# Prepend configuration folder to classpath.
#

cp="${nooputil_conf}:${cp}"

#
# Prepend development output folder to classpath.
#

#cp="${xorutil_home}/out/production/NtrUtil:${cp}"

#
# Execute the application.
#

java ${JAVA_OPTS} -cp "${cp}" com.tiffanytimbric.crypto.nooputil.Main $@

exit $?
