#!/bin/bash

#JAVA_OPTS="${JAVA_OPTS} --source 19"
#JAVA_OPTS="${JAVA_OPTS} --enable-preview"

if [ "-g" == "${1}" ]; then
    JAVA_OPTS="${JAVA_OPTS} -Xdebug -agentlib:jdwp=transport=dt_socket,server=y,suspend=y,address=5005"
    shift 1
fi

xorutil_home="$(dirname ${0})"/..
xorutil_homeutil_conf="${xorutil_home}"/conf
xorutil_homeutil_dist="${xorutil_home}"/dist
xorutil_homeutil_lib="${xorutil_home}"/lib
xorutil_homeutil_out="${xorutil_home}"/out/production/crypto

xorutil_homeutil_dist_escaped="$(/bin/echo "${xorutil_homeutil_dist}" | /usr/bin/sed 's/\//\\\//g')"
xorutil_homeutil_lib_escaped="$(/bin/echo "${xorutil_homeutil_lib}" | /usr/bin/sed 's/\//\\\//g')"

#
# Add distribution to classpath.
#

dists="${xorutil_homeutil_dist}/$(/bin/ls "${xorutil_homeutil_dist}" | /usr/bin/tr '\n' ':')"
dists="$(/bin/echo ${dists} | /usr/bin/sed "s/:/:${xorutil_homeutil_dist_escaped}\//g")"

#
# Add all library dependencies to classpath.
#

libs="${xorutil_homeutil_lib}/$(/bin/ls "${xorutil_homeutil_lib}" | /usr/bin/tr '\n' ':')"
cp="${dists}:$(/bin/echo ${libs} | /usr/bin/sed "s/:/:${xorutil_homeutil_lib_escaped}\//g")"
cp="${xorutil_homeutil_out}:${cp}"

#
# Prepend configuration folder to classpath.
#

cp="${xorutil_homeutil_conf}:${cp}"

#
# Prepend development output folder to classpath.
#

#cp="${xorutil_home}/out/production/NtrUtil:${cp}"

#
# Execute the application.
#

java ${JAVA_OPTS} -cp "${cp}" com.tagfoster.crypto.xorutil.Main $@

exit $?
